<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALODAN Admin</title>

    <!-- Tailwind -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        .font-playfair {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="bg-white font-sans">

    <!-- Header superior -->
    <header class="w-full h-16 flex justify-between items-center px-8 border-b border-gray-300 shadow-md" style="background-color:#E1DECD;">
        <div class="flex items-center space-x-3">
            <img src="~/Imagenes/ALODANLOGO.jpeg" alt="ALODAN" class="h-12 w-auto rounded">
            <h1 class="text-xl font-playfair font-semibold">Panel de Administración</h1>
        </div>

        <div>
            <a asp-controller="Cuenta" asp-action="Logout"
               class="flex items-center space-x-2 text-black hover:font-bold">
                <i class="fas fa-right-from-bracket"></i>
                <span>Cerrar sesión</span>
            </a>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="p-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="w-full px-8 py-4 border-t border-gray-300 text-center bg-white text-black">
        <p class="text-sm">&copy; 2025 ALODAN - Administración</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
