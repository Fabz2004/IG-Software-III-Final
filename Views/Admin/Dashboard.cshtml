@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mx-auto px-8 py-10">
    <!-- Título principal -->
    <h2 class="text-3xl font-playfair font-bold mb-10 text-center">
        Panel de Administración - ALODAN
    </h2>

    <!-- Tarjetas principales -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- Gestión de Productos -->
        <div class="bg-[#E1DECD] shadow-md rounded-2xl p-8 text-center hover:shadow-lg transition">
            <i class="fas fa-box-open text-5xl mb-4"></i>
            <h3 class="text-xl font-semibold mb-2">Gestión de Productos</h3>
            <p class="text-gray-700 mb-4">
                Agrega, edita o elimina productos de tu tienda.
            </p>
            <a asp-controller="Admin" asp-action="Productos"
               class="inline-block bg-black text-white px-6 py-2 rounded hover:bg-gray-800">
                Ir a productos
            </a>
        </div>

        <!-- Gestión de Pedidos -->
        <div class="bg-[#E1DECD] shadow-md rounded-2xl p-8 text-center hover:shadow-lg transition">
            <i class="fas fa-clipboard-list text-5xl mb-4"></i>
            <h3 class="text-xl font-semibold mb-2">Gestión de Pedidos</h3>
            <p class="text-gray-700 mb-4">
                Revisa los pedidos realizados y actualiza su estado.
            </p>
            <a asp-controller="Admin" asp-action="Pedidos"
               class="inline-block bg-black text-white px-6 py-2 rounded hover:bg-gray-800">
                Ir a pedidos
            </a>
        </div>
    </div>

    <!-- Botón de salida -->
    <div class="text-center mt-12">
        <a asp-controller="Cuenta" asp-action="Logout"
           class="text-red-600 font-semibold hover:underline">
            Cerrar sesión
        </a>
    </div>
</div>

<!-- Iconos de FontAwesome -->
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
