@model IEnumerable<ALODAN.Models.Producto>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Administrar Productos";
}

<div class="container mx-auto px-8 py-6">
    <h2 class="text-2xl font-bold mb-6">Gestión de Productos</h2>

    <div class="mb-4 flex justify-between items-center">
        <a asp-action="CrearProducto" class="bg-black text-white px-4 py-2 rounded hover:bg-gray-800">
            + Agregar nuevo producto
        </a>
    </div>

    <table class="w-full border border-gray-300 border-collapse text-sm">
        <thead style="background-color:#E1DECD;">
            <tr class="font-semibold text-left">
                <th class="p-2">ID</th>
                <th class="p-2">Nombre</th>
                <th class="p-2">Categoría</th>
                <th class="p-2 text-center">Precio (S/.)</th>
                <th class="p-2 text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="p-2">@producto.Id</td>
                    <td class="p-2 flex items-center">
                        <img src="@producto.ImagenUrl" alt="@producto.Nombre" class="w-10 h-10 object-cover mr-3 rounded" />
                        @producto.Nombre
                    </td>
                    <td class="p-2">@producto.Categoria</td>
                    <td class="p-2 text-center">@producto.Precio.ToString("N2")</td>
                    <td class="p-2 text-center">
                        <a asp-action="EditarProducto" asp-route-id="@producto.Id" class="text-blue-600 hover:underline mr-3">Editar</a>
                        <form asp-action="EliminarProducto" asp-route-id="@producto.Id" method="post" class="inline">
                            <button type="submit" class="text-red-600 hover:underline"
                                    onclick="return confirm('¿Eliminar este producto?')">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

